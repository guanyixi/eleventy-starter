---
layout: base.njk
title: Homepage
---

<section id="home">
    <div class="container-sm">
       <h1 class="display text-center mb-12">Eleventy Starter</h1>
    </div>
</section>

<section id="projects" class="py-20">
    <div class="container">
        <div class="pill"></div>
        <div class="units">
            {% for item in projects.projects %}
            <div class="unit">
                <img src="{{ item.image | url }}" alt="{{ item.title }}">
                <div>
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.content | safe }}</p>
                </div>
            </div>
            {% endfor %} 
        </div>           
    </div>
</section>